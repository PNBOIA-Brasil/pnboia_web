<div class="container">
  
    <div class="d-flex justify-content-center pt-5">
      <%= image_tag "logo_pnboia.png", class: "nav-img" %>
    </div>
  


  <div class='container pt-5'>  
    <h3 class="text-center bg-primary text-white p-2 font-weight-bold">
    Bem-vindo</h3>
    
    <div class= 'container border border-primary'>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password, label: "Senha",
                      required: false,
                      input_html: { autocomplete: "Senha" } %>
        </div>
      
        <div class="form-actions pb-2">
          <%= f.button :submit, "Entre", class: "btn btn-success font-weight-bold"%>
          <%= link_to "Registrar-se", new_user_registration_path, :class => 'btn btn-primary font-weight-bold'  %>
          <%= link_to "Esqueci a Senha", new_user_password_path, :class => 'btn btn-danger font-weight-bold'  %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div> 
</div>
