<div class="container">
  
  <div class="d-flex justify-content-center pt-5">
    <%= image_tag "logo_pnboia.png", class: "nav-img" %>
  </div>
  <div class='container pt-5 pb-5'>  
    <h3 class="text-center bg-primary text-white p-2 font-weight-bold">EDITAR MEUS DADOS</h3>    
    <div class= 'container border border-primary'>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :username, label: "Nome de usuário",
                      required: true,
                      autofocus: true %>
          <%= f.input :email, label: "Email",
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" }%>
          <%= f.input :institution, label: "Instituição",
                      required: true,
                      autofocus: true %>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>

          <%= f.input :password, label: "Senha",
                      hint: "Deixe em branco se você não quer atualizar a senha",
                      required: false,
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation, label: "Confirme sua Senha",
                      required: false,
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :current_password, label: "Senha Atual",
                      hint: "Precisamos da sua senha atual",
                      required: true,
                      input_html: { autocomplete: "current-password" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Atualizar", class: "btn btn-success font-weight-bold"%>
        </div>
      <% end %>
      <p class='pt-5'>Quer cancelar a conta? <%= link_to "Clique aqui", registration_path(resource_name), data: { confirm: "Tem certeza?" }, method: :delete, class: "btn btn-danger font-weight-bold" %></p>
      <%= link_to "Voltar", :back, class: "btn btn-primary font-weight-bold" %>
    </div>
  </div> 
</div>
