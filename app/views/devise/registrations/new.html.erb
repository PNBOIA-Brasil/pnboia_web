<div class="container">
  
  <div class="d-flex justify-content-center pt-5">
    <%= image_tag "logo_pnboia.png", class: "nav-img" %>
  </div>
  <div class='container pt-5 pb-5'>  
    <h3 class="text-center bg-primary text-white p-2 font-weight-bold">REGISTRAR-SE</h3>    
    <div class= 'container border border-primary'>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :username, label: "Nome de usuário",
                      required: true,
                      autofocus: true %>
          <%= f.input :email, label: "Email",
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" }%>
          <%= f.input :institution, label: "Instituição",
                      required: true,
                      autofocus: true %>
          <%= f.input :description, label: "Motivo para uso dos dados",
                      required: true,
                      autofocus: true %>
          <%= f.input :password, label: "Senha",
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation, label: "Confirmação de senha",
                      required: true,
                      input_html: { autocomplete: "new-password" } %>      
          <div class="form-actions pb-2">
            <%= f.button :submit, "Registrar-se", class: "btn btn-success font-weight-bold"%>
          </div>
      <% end %>
    </div>
    <%= link_to "Entrar", new_user_session_path, class: "btn btn-primary" %>
    <%= link_to "Voltar", root_path, :class => 'btn btn-primary font-weight-bold'  %>
  </div> 
</div>
