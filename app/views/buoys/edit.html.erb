                            <%=text_field_tag :type, "working_cycle_picture", class: "inactive-tab"%>
                            <%=text_field_tag :file_name, picture, class: "inactive-tab"%>
                            <%= image_tag "http://www.pnboia.org/pictures/#{picture}", class: "nav-img"%>
                            <%= f.button :submit, "X", class: "btn btn-outline-danger m-0", data: { confirm: 'Are you sure?' } %>
                        <% end %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>