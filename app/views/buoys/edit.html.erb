                            <%= f.button :submit, "X", class: "btn btn-outline-danger m-0", data: { confirm: 'Are you sure?' } %>
                        <% end %>
                    <% end %>
                </div>
            </div>
        </div>

        <div class='col-12 pt-5 pb-5'>
            <p class='text-center'>LINHA DE FUNDEIO</p>
            <div class='row justify-content-center'>
                <div class='col-6'>
                    <%= simple_form_for @buoy, :url => add_image_attachment_buoy_url(@buoy), html: { class: "d-flex justify-content-center"} do |f| %>
