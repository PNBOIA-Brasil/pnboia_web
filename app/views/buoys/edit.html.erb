                <div class='col-4'>
                    <% @buoy.dimension_picture.each_with_index do |picture, idx| %>
                        <%= simple_form_for @buoy, :url => delete_image_attachment_buoy_url(@buoy), html: { class: "d-inline"} do |f| %>
                            <%=text_field_tag :type, "dimension_picture", class: "inactive-tab"%>
